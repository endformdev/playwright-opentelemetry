{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"noEmitOnError": true,
		"skipLibCheck": true,

		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,

		"strict": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"forceConsistentCasingInFileNames": true
	}
}

{
  "name": "playwright-opentelemetry",
  "version": "0.0.1",
  "description": "A reporter for Playwright that can export traces and spans in opentelemetry format.",
  "type": "module",
  "license": "Apache-2.0",
  "homepage": "https://github.com/endform/playwright-opentelemetry#readme",
  "bugs": {
    "url": "https://github.com/endform/playwright-opentelemetry/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endform/playwright-opentelemetry.git"
  },
  "author": "Oliver Stenbom <oliver@endform.dev>",
  "keywords": [
    "playwright",
    "opentelemetry",
    "reporting",
    "testing",
    "automation"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
